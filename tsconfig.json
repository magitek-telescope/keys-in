{
  "compilerOptions": {
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./lib",
    "declarationDir": "./lib/types",
    "lib": [
      "es2015",
      "es2016",
      "es2017.sharedmemory"],
    "types": ["jest"]
  },
  "compileOnSave": false,
  "include": [
    "./src/**/*"
  ]
}
